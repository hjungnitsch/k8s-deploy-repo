apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: temporalio-prod
  namespace: argocd
  finalizers:
    - resources-finalizer.argocd.argoproj.io
spec:
  project: default
  source:
    repoURL: https://github.com/temporalio/helm-charts.git
    targetRevision: v1.6.2
    path: "."
    helm:
      valueFiles:
        - values.yaml
      values: |-
        server:
          replicaCount: 1
        cassandra:
          config:
            cluster_size: 1
        prometheus:
          enabled: false
        grafana:
          enabled: false
        elasticsearch:
          enabled: false
        kafka:
          enabled: false
  destination:
    server: https://kubernetes.default.svc
    namespace: temporalio
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
      allowEmpty: false
    syncOptions:
    - CreateNamespace=true